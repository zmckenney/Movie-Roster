<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="DetailText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/detail_main_text</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>
    
    <style name="CustomRatingBar" parent="@android:style/Widget.Holo.Light.RatingBar.Indicator">
    </style>
    
    <style name="ReviewText" parent="DetailText">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">11</item>
        <item name="android:text">@string/loading_reviews</item>
    </style>

    <style name="TrailerText" parent="DetailText">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/loading_trailers</item>
        <item name="android:background">@color/highlight_background_color</item>
        <item name="android:textColor">@color/detail_title_text</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ReviewAuthor" parent="TrailerText">
        <item name="android:text"></item>
    </style>

    <style name="ReadmoreButton">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:text">@string/button_readmore</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>
