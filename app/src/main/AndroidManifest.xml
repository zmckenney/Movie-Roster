<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zac.movieroster" >

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >

        <meta-data android:name="DATABASE" android:value="favorites_database.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.example" />


        <activity
            android:name="com.example.zac.movieroster.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.zac.movieroster.DetailActivity"
            android:label="Movie Detail View">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.zac.movieroster.MainActivity" />
        </activity>

    </application>

</manifest>
